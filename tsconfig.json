{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "module": "node16",
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node16",
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "typedocOptions": {
    "entryPoints": [
      "src/index.ts"
    ],
    "out": "docs"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules/**/*"
  ]
}